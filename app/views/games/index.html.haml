%h1 Listing games
- if can? :create, Game
  = link_to 'New Game', new_game_path
%p
.container
  .row
    .col-md-offset
      - @games.each do |game|
        .col-md-3.classeImage
          .clearfix
            .thumbnail
              = image_tag(game.cover.url, :id => "cover", :class => "img-rounded") if game.cover?
              .caption
                .caption_infos
                  %h3
                    = game.name
                  %p 
                    = game.description
                .caption_button                  
                  = link_to('Learn more', game, :class => "btn btn-primary" )

          - if can? :create, Game         
            %td= link_to 'Edit', edit_game_path(game)
          %td= link_to 'Destroy', game, :method => :delete, :data => { :confirm => 'Are you sure?' }

