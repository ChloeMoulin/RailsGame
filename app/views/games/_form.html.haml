= form_for @game do |f|
  - if @game.errors.any?
    #error_explanation
      %h2= "#{pluralize(@game.errors.count, "error")} prohibited this game from being saved:"
      %ul
        - @game.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :released_at
    = f.datetime_select :released_at
  .field
    = f.label :platform
    = f.text_field :platform
  .field
    = f.label :company
    = f.text_field :company
  .field
    = f.label :grade
    = f.number_field :grade
  .actions
    = f.submit 'Save'
