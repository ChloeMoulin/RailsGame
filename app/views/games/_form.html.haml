.well
  = form_for @game,  :html => {:class => 'form-horizontal'} do |f|
    - if @game.errors.any?
      #error_explanation
        %h2= "#{pluralize(@game.errors.count, "error")} prohibited this game from being saved:"
        %ul
          - @game.errors.full_messages.each do |msg|
            %li= msg

    .form-group
      = f.label :name, :class => 'col-sm-5 control-label required'
      .col-sm-4
        = f.text_field :name, :class => 'form-control'  
    .form-group
      = f.label :description, :class => 'col-sm-5 control-label required'
      .col-sm-4
        = f.text_area :description, :class => 'form-control', :maxlength => 380, :rows => 2
    .form-group
      = f.label :released_at, :class => 'col-sm-5 control-label required'
      .col-sm-4
        = f.datetime_select :released_at, :class => 'form-control'  
    .form-group
      = f.label :platform, :class => 'col-sm-5 control-label required'
      .col-sm-4
        = f.text_field :platform, :class => 'form-control'  
    .form-group
      = f.label :company, :class => 'col-sm-5 control-label required'
      .col-sm-4
        = f.text_field :company, :class => 'form-control' 
    .form-group
      = f.label :grade, :class => 'col-sm-5 control-label required'
      .col-sm-4   
        = f.number_field :grade, :class => 'form-control' 

    .form-group
      = f.label :cover, :class => 'col-sm-5 control-label required'
      .col-sm-4 
        = f.file_field :cover
      
    .form-group
      .col-sm-offset-5.col-sm-3
        = button_tag(type: 'submit', class: "btn btn-default btn-primary") do
          %span.glyphicon.glyphicon-floppy-disk
          Save
