#content
  .well
    %h2.text-center Log in
    = form_for(resource, as: resource_name, url: session_path(resource_name), :html => {:class => 'form-horizontal'}) do |f|
      .form-group
        = f.label :email, :class => 'col-sm-5 control-label required'
        .col-sm-4
          = f.email_field :email, autofocus: true, :class => 'form-control'
      .form-group
        = f.label :password, :class => 'col-sm-5 control-label required'
        .col-sm-4
          = f.password_field :password, autocomplete: "off", :class => 'form-control'
      - if devise_mapping.rememberable?
        .form-group
          = f.check_box :remember_me
          = f.label :remember_me, :class => 'col-sm-5 control-label required'
        .form-group
          .col-sm-offset-5.col-sm-3
            = button_tag(type: 'submit', class: "btn btn-default btn-primary") do
              %span.glyphicon.glyphicon-log-in
              Login
    = render "devise/shared/links"