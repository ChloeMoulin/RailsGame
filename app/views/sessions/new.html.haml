#content
	%h2.text-center
		Login
	.well
		= form_tag session_path, :class => 'form-horizontal' do
		
			.form-group
				= label_tag :email, nil, :class => 'col-sm-5 control-label required'
				.col-sm-4
					= text_field_tag :email, nil, :class => 'form-control'

			.form-group
				= label_tag :password, nil, :class => 'col-sm-5 control-label required'
				.col-sm-4
					= password_field_tag :password, nil, :class => 'form-control'

			.form-group
				.col-sm-offset-5.col-sm-3
					= button_tag(type: 'submit', class: "btn btn-default btn-primary") do
						%span.glyphicon.glyphicon-log-in
						Login
