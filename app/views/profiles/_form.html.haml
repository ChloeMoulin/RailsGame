.well
	= form_for @profile, :html => {:class => 'form-horizontal'} do |f|
		.form-group
			= f.label :age, :class => 'col-sm-5 control-label required'
			.col-sm-4
				= f.number_field :age, :class => 'form-control'
		.form-group
			= f.label :country, :class => 'col-sm-5 control-label required'
			.col-sm-4
				= f.text_field :country, :class => 'form-control'		
		.form-group
			.col-sm-offset-5.col-sm-3
				= button_tag(type: 'submit', class: "btn btn-default btn-primary") do
					%span.glyphicon.glyphicon-floppy-disk
					Save

		

